/*!  GENERAL STYLES
----------------------------------------------------------*/

body
	margin 0
	padding 0
	min-width 320px
	font-family $pf
	font-weight 400
	font-size 15px
	line-height 1.9
	color $c2
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	
body,
.vl-content-holder
	background-color $c6
	
img
	max-width 100%
	height auto
	
	
/*!  CONTENT
----------------------------------------------------------*/

.container
	max-width 1140px
	width 100%

.vl-main-padding
	padding 90px 0
	@media (max-width: 767px)
		padding 80px 0
		
.vl-main-padding-top
	padding-top 90px
	@media (max-width: 767px)
		padding-top 80px
		
.vl-main-padding-bottom
	padding-bottom 90px
	@media (max-width: 767px)
		padding-bottom 80px