/*!  SHORTCODE COUNTER UP
----------------------------------------------------------*/

.vl-counter-up
	.vl-counter-title
		line-height 1
		margin-top 10px
		text-transform uppercase
		letter-spacing 2px
		
	.vl-counter-icon
		font-size 50px
		line-height 50px
		margin-bottom 20px
		color $c0
		
	.vl-counter-number
		font-size 40px
		line-height 40px
		margin-bottom 20px
		color $c0
	@media (max-width: 767px)
		margin-bottom 30px